<% include header.ejs %>
<nav class="navbar navbar-inverse" role="navigation">
    <div class="container container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <a class="navbar-brand" href="..">Let's Go</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li><a href="..">主页</a></li>
                <li class="active"><a>商品列表</a></li>

            </ul>
            <ul class="nav navbar-nav pull-right">
                <li>
                    <a href="cart">
                        <span class="glyphicon glyphicon-shopping-cart"></span>购物车 (<span><%= count %></span>)
                    </a>
                </li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>

<div class="container text-center">

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>商品列表</h3>
        </div>
        <div class="panel-body">
            <table id="item-table" class="table table-bordered">
                <tr>
                    <th>分类</th><th>名称</th><th>单价(元)</th><th>单位</th><th></th>
                </tr>
                <% for(var i=0; i<list.length; i++) {%>
                <form method="post">
                    <input type="hidden" name="name" value="<%= list[i].name %>"/>
                    <tr>
                        <td><%= list[i].type %></td>
                        <td><%= list[i].name %></td>
                        <td><%= list[i].price %></td>
                        <td><%= list[i].unit %></td>
                        <td><input type="submit" class="btn btn-primary btm-sm" value="加入购物车" /></td>
                    </tr>
                </form>
                <% } %>
            </table>
        </div>
    </div>

</div>
<% include footer.ejs %>