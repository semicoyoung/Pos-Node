<% include header.ejs %>
<nav class="navbar navbar-inverse" role="navigation">
    <div class="container container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <a class="navbar-brand" href="..">Let's Go</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li><a href="..">主页</a></li>
                <li><a href="list">商品列表</a></li>

            </ul>
            <ul class="nav navbar-nav pull-right">
                <li class="active">
                    <a>
                        <span class="glyphicon glyphicon-shopping-cart"></span>购物车 (<span><%= cart.count %></span>)
                    </a>
                </li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>

<div class="container text-center">

    <div class="panel panel-default">

        <div class="panel-heading">
            <h4 class="side-space text-left">购物清单</h4>
        </div>

        <div class="panel-body">
            <table id="bought-table" class="table table-bordered">
                <tr>
                    <th>分类</th><th>名称</th><th>单价(元)</th><th>单位</th><th>数量</th><th>小计</th>
                </tr>
                <% for(var i=0; i<list.length; i++) {%>
                <tr>
                    <td><%= list[i].type %></td>
                    <td><%= list[i].name %></td>
                    <td><%= list[i].price %></td>
                    <td><%= list[i].unit %></td>
                    <td>
                        <div class="btn-group">
                            <button class="btn btn-default">-</button>
                            <button class="btn btn-default item-count" disabled="disabled"><%= list[i].count %></button>
                            <button class="btn btn-default">+</button>
                        </div>
                    </td>
                    <td><%= list[i].sumDisplay() %></td>
                </tr>
                <% } %>
            </table>
        </div>

        <div class="side-space text-right">
            <p>总计：<span><%= cart.totalPrice.toFixed(2) + '元' %></span></p>
            <p>节省：<span><%= cart.savePrice.toFixed(2) + '元' %></span></p>
            <a class="btn btn-primary vertical-space" href="payment">付款</a>
        </div>
    </div>

</div>

<% include footer.ejs %>
